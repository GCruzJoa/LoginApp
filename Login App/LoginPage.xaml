<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_App.LoginScreen">
    <StackLayout x:Name="MasterLayout">

        <StackLayout x:Name="LogoLayout"/>
        <Image x:Name="LoginLogo" Source="logoIntec.jpg" WidthRequest="150" HeightRequest="150"/>


        <StackLayout x:Name="LoginInputs" VerticalOptions="StartAndExpand">
            <StackLayout.Padding>
                <OnIdiom x:TypeArguments="Thickness">
                    <OnIdiom.Phone>40,0,40,40</OnIdiom.Phone>
                    <OnIdiom.Tablet>40,0,40,0</OnIdiom.Tablet>
                </OnIdiom>
            </StackLayout.Padding>

            <Label x:Name="LB1"  Text="Email" />
            <Entry x:Name="E1" Placeholder="Email" />
            <Label x:Name="LB2"  Text="Password"/>
            <Entry x:Name="E2" Placeholder="Password" IsPassword="True"/>
            <Button x:Name="BT1" Text="Login" Clicked="LoginClicked" BackgroundColor="Red" TextColor="FloralWhite"/>
            <Button x:Name="BT2" Text="Registro" Clicked="RegistroClicked" TextColor="Red"/>
        </StackLayout>
    </StackLayout>
</ContentPage>