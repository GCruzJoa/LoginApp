<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_App.Views.LoginPage">
    <ScrollView>
        <StackLayout x:Name="MasterLayout">

            <StackLayout x:Name="LogoLayout"/>
            <Image x:Name="LoginLogo" Source="logoIntec.jpg" WidthRequest="150" HeightRequest="150"/>
        
            <StackLayout x:Name="LoginInputs" VerticalOptions="StartAndExpand">
                <StackLayout.Padding>
                    <OnIdiom x:TypeArguments="Thickness">
                        <OnIdiom.Phone>40,0,40,40</OnIdiom.Phone>
                        <OnIdiom.Tablet>40,0,40,0</OnIdiom.Tablet>
                    </OnIdiom>
                </StackLayout.Padding>

                <Entry x:Name="emailEntry" Placeholder="Email" Text="{Binding Email}"/>
                <Entry x:Name="passwordEntry" Placeholder="Password" Text="{Binding Password}" IsPassword="True"/>
                <Button x:Name="loginButton" Text="Login" Command="{Binding LoginCommand}" BackgroundColor="Red" TextColor="FloralWhite"/>
                <Button x:Name="signUpButton1" Text="Registro" Command="{Binding SignUpCommand}" TextColor="Red"/>

            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>