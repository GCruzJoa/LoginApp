<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login_App.Views.SignUpPage">
    <ScrollView>
        <StackLayout x:Name="MasterLayout" Margin="20" BackgroundColor="White">

            <Image x:Name="RegistroLogo" Source="logoIntec.jpg" WidthRequest="150" HeightRequest="150"/>

            <Entry x:Name="nameEntry" Placeholder="Name" Text="{Binding Name}"/>
            <Entry x:Name="emailEntry" Placeholder="Email" Text="{Binding Email}"/>
            <Entry x:Name="passwordEntry" Placeholder="Password" Text="{Binding Password}"  IsPassword="true"/>
            <Entry x:Name="confirmPassEntry" Placeholder="Confirm Password" Text="{Binding ConfirmPassword}" IsPassword="true"/>
            <Button x:Name="signUpButton2" Text="Sign Up" Command="{Binding OnSignUpCommand}"  Background="Red" TextColor="GhostWhite"/>
        </StackLayout>
    </ScrollView>
</ContentPage>